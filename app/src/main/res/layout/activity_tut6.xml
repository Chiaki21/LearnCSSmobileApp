        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Installing Windows 10"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:textSize="30sp">
        </TextView>

        <ImageView
